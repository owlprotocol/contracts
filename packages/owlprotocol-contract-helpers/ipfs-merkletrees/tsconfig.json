{
    "compilerOptions": {
        //ES Module
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        //"sourceMap": true,
        // "outDir": "lib",
        // "rootDir": "src",
        "strict": true,
        "lib": ["esnext", "dom"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true
    }
}
